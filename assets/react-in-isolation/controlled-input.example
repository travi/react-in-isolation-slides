import React, {Component} from 'react';

export default class Input extends Component {
  state = {value: ''};

  changeHandler = (event, updatedValue) => {
    this.setState({
      value: updatedValue
    });
  };

  render() {
    return (
      <input
        type="text"
        value={this.state.value}
        onChange={this.changeHandler}
      />
    );
  }
}
